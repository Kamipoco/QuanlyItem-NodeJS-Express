extends ../layouts/common.pug

block content   
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post", enctype="multipart/form-data")
        .form-group
            label(for="name") Name &nbsp
            input#name.form-control(style='width: 35%;', name="name" type="text",placeholder='Name', value= values ? values.name : '')

        .form-group
            label(for="phone") Phone &nbsp
            input#phone.form-control(style='width: 35%;', name="phone" type="text",placeholder='Phone', value= values ? values.phone : '')
        .form-group
            label(for="avatar") Avatar &nbsp
            input#avatar.form-control-file(style='width: 35%;', name="avatar" type="file")

        button(class="btn btn-primary ml-2") Create